# Environment Variables for Phase V Deployment
# Copy this file to .env and fill in your actual values

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Authentication
JWT_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=30

# AI (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Rate Limiting
MAX_MESSAGES_PER_DAY=100
MAX_TOKENS_PER_MONTH=500000

# CORS
CORS_ORIGINS=http://localhost:3000,http://todo.local

# Dapr
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# Redpanda Cloud (Kafka)
REDPANDA_BOOTSTRAP_SERVER=seed-xxxxx.cloud.redpanda.com:9092
REDPANDA_CLIENT_ID=your-client-id-here
REDPANDA_CLIENT_SECRET=your-client-secret-here

# Email Notifications (Optional - for notification service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@todo-app.com

# API URLs (for testing)
API_URL=http://todo.local
BASE_URL=http://todo.local
